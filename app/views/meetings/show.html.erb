<div class="container">
<div class="row justify-content-center">
<div class="col-6">

<h2 class="mb-4 text-center pt-4 text-indigo" style="font-weight:700;">Appointment Information</h3>

<div class="card shadow">
  <div class="card-header heading text-center">
    <%= @meeting.name %>
  </div>
  <div class="card-body">
    <h5 class="card-title ">Address</h5>
    <p class="card-text border rounded p-2 shadow-sm"><%= @meeting.address %></p>
    <h5 class="card-title ">Appointment Time</h5>
    <p class="card-text border rounded p-2 shadow-sm"><%= readable_time(@meeting.start_time) %></p>
    <h5 class="card-title ">Description</h5>
    <p class="card-text border rounded p-2 shadow-sm"><%= @meeting.description %></p>
    <%= link_to "Edit Meeting", edit_meeting_path, class: "btn btn-outline-danger mt-3" %>
  </div>
  
  <div class="card-footer text-muted">
  <small>Booked at <%= time_ago_in_words(@meeting.created_at) %> ago</small>
  </div>

</div>

</div>
</div>
</div>
